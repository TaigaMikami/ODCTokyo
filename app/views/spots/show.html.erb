<div class="show">
  <div class="spot-box">
    <%= image_tag("#{@spot.image_url}", :size => "400x400", :alt => "アイコン") %>
    <h1><%= @spot.name %></h1>
    <div class="close-station">
      <label>最寄駅</label><%= @spot.station.name %>駅
    </div>
    <div class="spot-description">
      <%= @spot.description %>
    </div>
  </div>

<% if @twitter.tweet.present? %>
  <div class="tweet-table-wrapper">
    <div class="eval-bar">
      <!-- MICHIKUSA AIが判定するおすすめ度の大きさ<br>
      <table>
        <tr>
          <td>0　</td>
          <td>おすすめできない</td>
        </tr>
        <tr>
          <td>100　</td>
          <td>すごくおすすめ</td>
        </tr>
      </table> -->

      <!-- <br> -->
      <%= image_tag("eval-bar.png", :size => "500x41") %>
    </div>
    <div class="machine-evaluation">
      <%= image_tag("ai.png", :size => "80x80") %>
      <div class="evaluation">
        AIが判定するおすすめ度
        <h1><%= @evaluation_point  %></h1>
      </div>
    </div>
    <div class="tweet-container">
      <table class="table table-hover">
        <thead class="table-top">
        <tr>
          <td>#<%= @spot.name %>ツイート</td>
        </tr>
        </thead>
        <tbody class="table-body">
        <% @twitter.tweet.each do |tweet| %>
          <tr>
            <td class="col-md-2"><img src="<%= tweet[:icon] %>" alt="icon"></td>
            <td class="col-md-3"><%= tweet[:name] %></td>
            <td class="col-md-7"><%= tweet[:text] %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
